  },
  "network": {
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
    "format": "{icon}",
    "format-wifi": "{icon} NET",
    "format-ethernet": "Û∞ÄÇ NET",
    "format-disconnected": "Disconnected Ó¨Å",
    "tooltip-format-disconnected": "Error",

{
  "layer": "top",
  "position": "top",
  "reload_style_on_change": true,
  "modules-left": ["custom/power_button", "clock", "pulseaudio"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": [
    //"network",
    //"bluetooth",
    "battery",
    "cpu",
    "memory",
    "temperature",
  ],

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÑë",
      "default": "ÔÑë",
      "empty": "ÔÑë",
    },
    "persistent-workspaces": {
      "*": [1, 2, 3, 4, 5],
    },
  },
  "custom/power_button": {
    "format": "Û∞£á",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/power_menu.xml",
    "menu-actions": {
      "shutdown": "shutdown -h now",
      "reboot": "reboot",
      "lock": "hyprlock",
      "logout": "loginctl terminate-user $USER",
    },
  },
  "clock": {
    "format": "ÔÄó {:%H:%M} ",
    "interval": 1,
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "format": {
        "today": "<span color='#fAfBfC'><b>{}</b></span>",
      },
    },
    "actions": {
      "on-click-right": "shift_down",
      "on-click": "shift_up",
    },
  },
  "pulseaudio": {
    "format": "{icon} {volume}% ",
    "format-bluetooth": "Û∞Ç∞ {volume}%",
    "format-bluetooth-muted": "Û∞Ç≤ {icon}",
    "format-muted": "Û∞ùü",
    "format-icons": {
      "headphone": "Û∞ãã",
      "hands-free": "Û∞•∞",
      "headset": "Û∞ãé",
      "phone": "Û∞è≤",
      "portable": "Û∞Ñù",
      "car": "Û∞Ñã",
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
    },
    "on-click": "pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +2%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -2%",
  },
  "custom/pacman": {
    "format": "Û∞Ö¢ {}",
    "interval": 30,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "ghostty -e sh -c 'yay -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
    "signal": 8,
    "tooltip": false,
  },
  "temperature": {
    "thermal-zone": 1,
    "critical-threshold": 90,
    "interval": 10,
    "format-critical": "Û∞Ä¶ {temperatureC}¬∞C",
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Û±ÉÉ", "Û∞îè", "Û±ÉÇ"],
    "min-length": 8,
    "max-length": 8,
    "tooltip-format": "Temp in Fahrenheit: {temperatureF}¬∞F",
  },
  "memory": {
    "interval": 10,
    "format": "Û∞òö {percentage}%",
    "format-warning": "Û∞Äß {percentage}%",
    "format-critical": "Û∞Äß {percentage}%",
    "states": {
      "warning": 75,
      "critical": 90,
    },
    "min-length": 7,
    "max-length": 7,
    "tooltip-format": "Memory Used: {used:0.1f} GB / {total:0.1f} GB",
  },
  "cpu": {
    "interval": 10,
    "format": "Û∞çõ {usage}%",
    "format-warning": "Û∞Ä® {usage}%",
    "format-critical": "Û∞Ä® {usage}%",
    "min-length": 7,
    "max-length": 7,
    "states": {
      "warning": 75,
      "critical": 90,
    },
    "tooltip": "CPU usage: {usage}",
  },
  "bluetooth": {
    "format": "Ôäî BT",
    "format-disabled": "Û∞Ç≤ BT",
    "format-connected": "Ôäî BT",
    "tooltip-format": "Devices connected: {num_connections}",
